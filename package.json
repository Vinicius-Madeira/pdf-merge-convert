{
  "name": "pdf-world",
  "version": "2.2.5",
  "description": "PDF to PDF/A Converter with drag-and-drop page rearrangement",
  "homepage": "https://github.com/Vinicius-Madeira/pdf-world",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:linux": "npm run build && electron-builder --linux",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "dist": "npm run build && electron-builder --publish=never",
    "preview": "vite preview",
    "test": "vitest"
  },
  "keywords": [
    "pdf",
    "pdfa",
    "converter",
    "merge",
    "electron"
  ],
  "author": {
    "name": "Vinicius Madeira",
    "email": "vinicius.madeira@vinimad.com"
  },
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.526.0",
    "pdf-lib": "^1.17.1",
    "pdf-merger-js": "^5.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.40.1",
    "@types/node": "^24.1.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "electron": "^37.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.38.0",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.0.4"
  },
  "build": {
    "appId": "com.pdfworld.app",
    "productName": "PDF World",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron/**/*",
      "dist/index.html",
      "dist/assets/**/*",
      "package.json",
      "!node_modules/**/*",
      "!src/**/*",
      "!docs/**/*",
      "!*.md",
      "!.git/**/*",
      "!.vscode/**/*",
      "!.eslintrc*",
      "!.gitignore",
      "!*.config.js",
      "!*.config.ts",
      "!tsconfig*.json",
      "!dist/*.exe",
      "!dist/*.AppImage",
      "!dist/*.deb",
      "!dist/*.dmg",
      "!dist/win-unpacked/**/*",
      "!dist/linux-unpacked/**/*",
      "!dist/mac/**/*",
      "!dist/*.yml",
      "!dist/*.yaml",
      "!dist/*.blockmap"
    ],
    "extraFiles": [],
    "compression": "maximum",
    "removePackageScripts": true,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": true,
      "differentialPackage": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "compression": "maximum"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns"
    }
  }
}
